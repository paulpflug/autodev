{
  "name": "autodev",
  "description": "quick auto restart script for dev servers",
  "version": "0.1.0",
  "homepage": "https://github.com/paulpflug/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/paulpflug/autodev"
  },
  "bin": {
    "autodev": "./cli.js"
  },
  "engines": {
    "node": "*"
  },
  "main": "autodev.js",
  "files": [
    "*.js"
  ],
  "dependencies": {
